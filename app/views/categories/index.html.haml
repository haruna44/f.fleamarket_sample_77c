.header
  .box
    .box__center
      .icon
        = link_to "/" do
          = image_tag ("/images/logo/logo.png")
      .form
        %form.search
          .search__input-box
            %input{type: "text", class: "search__input-box__text", placeholder: "キーワードから探す"}
          %botton{type: "submit", class: "search__submit"}
            = image_tag ("/images/icon/icon-search 1.png")

.category_index_content
  .category-box
    .category-box__top
      %h2 カテゴリー一覧
      - @parents.each_with_index do |parent, i|
        - unless parent.name.include?("カテゴリー一覧")
          = link_to "##{i}", class: "box__parent__link" do
            = parent.name
    - @parents.each_with_index do |parent, i|
      - unless parent.name.include?("カテゴリー一覧")
        .category-box__container
          .category-box__container__title{id: "#{i}"}
            = parent.name
          .category-box__child
            .category-box__child__all
              = link_to "#", class: "category__link__btn" do
                すべて
            -parent.children.each do |child|
              .child-box
                .child-box__name
                  = child.name
                .grandchild-box
                  .grandchild__link
                    = link_to "#", class: "category__link__btn" do
                      すべて
                  - child.children.each do |grandchild|
                    .grandchild__link
                      - unless grandchild.name.include?("すべて")
                        = link_to "#", class: "category__link__btn" do
                          = grandchild.name

.category_index_footer
  = render "items/footer"

