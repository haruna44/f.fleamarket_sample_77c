.show-content
  = render "header"
  .main-box
    .item
      .item__name
        %p 
          = @item.item_name
      .item__image
        = image_tag ("/images/icon/member_photo_noimage_thumb.png")
      .item__mini
        .item__mini__image
          = image_tag ("/images/icon/member_photo_noimage_thumb.png")
        .item__mini__image
          = image_tag ("/images/icon/member_photo_noimage_thumb.png")
    .price
      .price__value
        - price = (@item.price + @item.delivery_fee) * 1.1
        = "¥#{price.floor}"
      .price__fee
        %p
          (税込) 送料込み
    .detail
      .detail__sentences
        %p
          = @item.detail
      .detail__content
        .user
          .user__box
            %p出品者
          .user__name
            %p
              = @item.user.nickname
        .category
          .category__box
            %pカテゴリ
          .category__name
            %p財布
        .brand
          .brand__box
            %pブランド
          .brand__name
            %pヴィトン
        .condition
          .condition__box
            %p商品状況
          .condition__name
            %p
              = @item.condition
        .delivery_fee
          .delivery_fee__box
            %p配送料の負担
          .delivery_fee__name
            %p
              = @item.delivery_fee
        .shipping_area
          .shipping_area__box
            %p発送元の地域
          .shipping_area__name
            %p
              = @item.shipping_area
        .delivery_time
          .delivery_time__box
            %p発送日の目安
          .delivery_time__name
            %p
              = " #{@item.delivery_time}日で発送予定"
  .under
    .more
      %pヴィトンをもっとみる
    .recommended
      .recommended__image
        = image_tag ("/images/icon/member_photo_noimage_thumb.png")
      .recommended__price
        %p商品名
        .recommended__price__box
          %p
            1000円
          .recommended__price__box__fee
            %p
              (税込)
  = render "footer"
  = render "cameraicon"

      

    
    
      

    
      
      

