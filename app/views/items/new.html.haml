.item_new_content
  .new-content
    .main-box
      .header
        = image_tag "/images/logo/logo.png",size: "300x80"
      .sell
        = form_for [@item] do |f|
          .sell__image
            .content
              .menu
                .menu-name
                  %p出品画像
                .required
                  %p必須
              -if @item.errors.messages[:images].any?
                .error-message
                  %p必ず入力してください
              .sell__image__area
                #image-box
                  #previews
                    - if @item.persisted?
                      - @item.images.each_with_index do |image, i|
                        = image_tag image.src.url, data: { index: i }, width: "100", height: '100'
                    = f.fields_for :images do |i|
                      .js-file_group{"data-index" => "#{i.index}"}
                        = i.file_field :src, class: 'js-file',id:"item_images_attributes_0_src"
                      - if @item.persisted?
                        = image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy'
                %label{for: "item_images_attributes_0_src",id:"label_image"}
                  .click_erea
                    .click_erea__content
                      %pクリックして画像を選択してください
          .sell__name
            .content
              .name-content
                .menu
                  .menu-name
                    %p商品名
                  .required
                    %p必須
                -if @item.errors.messages[:item_name].any?
                  .error-message
                    %p必ず入力してください
                = f.text_field :item_name, type:"text"
              .detail-content
                .menu
                  .menu-name
                    %p商品の説明
                  .required
                    %p必須
                -if @item.errors.messages[:detail].any?
                  .error-message
                    %p必ず入力してください
                = f.text_field :detail, type:"text"
          .sell__about
            .content
              %p商品の詳細
              .about-content
                .about-content__box
                  .menu
                    .menu-name
                      %pカテゴリ
                    .required
                      %p必須
                  -if @item.errors.messages[:category_id].any?
                    .error-message
                      %p必ず入力してください
                  = f.select :category_id,['sample1', 'sample2', 'sample3'],{include_blank: '選択してください'}
                .about-content__box
                  .menu
                    .menu-name
                      %pブランド
                    .any
                      %p任意
                  = f.select :brand_id,['sample1', 'sample2', 'sample3'],{include_blank: '選択してください'}
                .about-content__box
                  .menu
                    .menu-name
                      %p商品の状態
                    .required
                      %p必須
                  -if @item.errors.messages[:condition].any?
                    .error-message
                      %p必ず選択してください
                  = f.select :condition, Item.conditions.keys, {include_blank: '選択してください'}
          .sell__price
            .content
              %p配送について
              .price-content__box
                .menu
                  .menu-name
                    %p販売価格
                  .required
                    %p必須
                .price
                  .price__yen
                    %p¥
                  .price__box
                    -if @item.errors.messages[:price].any?
                      .error-message
                        %p必ず入力してください
                    = f.text_field :price, type:"integer"
          .sell__delivery
            .content
              %p配送について
              .delivery-content
                .delivery-content__box
                  .menu
                    .menu-name
                      %p配送料
                    .required
                      %p必須
                  -if @item.errors.messages[:delivery_fee].any?
                    .error-message
                      %p必ず選択してください
                  = f.select :delivery_fee,['送料込み(出品者負担)', '着払い(購入者負担)'],{include_blank: '選択してください'}
                .delivery-content__box
                  .menu
                    .menu-name
                      %p発送元地域
                    .required
                      %p必須
                  -if @item.errors.messages[:shipping_area].any?
                    .error-message
                      %p必ず選択してください
                  = f.select :shipping_area, Item.shipping_areas.keys, {include_blank: '選択してください'}
                .delivery-content__box
                  .menu
                    .menu-name
                      %p発送までの日数
                    .required
                      %p必須
                  -if @item.errors.messages[:delivery_time].any?
                    .error-message
                      %p必ず選択してください
                  = f.select :delivery_time,['1~2日で発送', '2~3日で発送','4~7日で発送'],{include_blank: '選択してください'}
          .sell__submit
            .content
              = f.submit '出品する',class: "submit-btn"
          


      .n-footer
        .n-footer__logo
          = image_tag "/images/logo/logo.png",size: "150x50"
