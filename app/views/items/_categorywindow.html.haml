.categorywindow
  %ul.title
    %li.title__list
      = link_to "/categories/", class: "category__search search__btn" do
        カテゴリー
      %ul.category__list
        - @parents.each do |parent|
          %li
            = link_to "#", class: "category__parent__name" do
              = parent.name
            %ul.category__child.category__list
              - parent.children.each do |child|
                %li
                  = link_to "#", class: "category__child__name" do
                    = child.name
                  %ul.category__grandchild.category__list
                    - child.children.each do |grandchild|
                      %li
                        = link_to "#", class: " category__child-__name" do
                          = grandchild.name
        .brend-list
          %ul.brend-pulldown


