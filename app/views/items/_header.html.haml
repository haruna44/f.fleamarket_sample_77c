.header
  .box
    .box__center
      .icon
        = link_to "#" do
          = image_tag ("/images/logo/logo.png")
      .form
        %form.search
          .search__input-box
            %input{type: "text", class: "search__input-box__text", placeholder: "キーワードから探す"}
          %botton{type: "submit", class: "search__submit"}
            = image_tag ("/images/icon/icon-search 1.png")
        .result
          %ul.result_lists
    .box__under
      %ul.left-item
        %li.left-item__main
          = link_to "#" do
            カテゴリー
          .brend-list
            %ul.brend-pulldown
      %ul.right-menu
        - if user_signed_in?
          %li.right-menu__login
            = link_to "#" do
              ログアウト
        - else
          %li.right-menu__login
            = link_to new_user_session_path do
              ログイン
          %li.right-menu__new
            = link_to new_user_registration_path do
              新規会員登録
          